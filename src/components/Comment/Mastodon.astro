    display: flex;
    gap: 1rem;
    margin-top: 0.5rem;
    font-size: 0.875rem;
    color: oklch(var(--un-preset-theme-colors-secondary) / 0.7);
  }

  .mastodon-loading,
  .mastodon-no-comments,
  .mastodon-error {
    padding: 1rem;
    text-align: center;
  }

  .mastodon-error {
    color: oklch(0.6 0.15 20);
  }
</style>
