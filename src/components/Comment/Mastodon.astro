    margin-bottom: 1rem;
  }

  .mastodon-comment-header {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .mastodon-avatar {
    width: 48px;
    height: 48px;
    border-radius: 0.5rem;
    flex-shrink: 0;
  }

  .mastodon-comment-meta {
    flex: 1;
  }

  .mastodon-comment-author {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.25rem;
  }

  .mastodon-username {
    color: oklch(var(--un-preset-theme-colors-secondary) / 0.7);
    font-size: 0.875rem;
  }

  .mastodon-comment-time {
    font-size: 0.875rem;
    color: oklch(var(--un-preset-theme-colors-secondary) / 0.7);
  }

  .mastodon-comment-content {
    margin-top: 0.5rem;
    line-height: 1.6;
  }

  .mastodon-comment-content :global(p) {
    margin-bottom: 0.5rem;
  }

  .mastodon-comment-content :global(a) {
    color: oklch(var(--un-preset-theme-colors-primary));
    text-decoration: none;
  }

  .mastodon-comment-content :global(a:hover) {
    text-decoration: underline;
  }

